    "content": {{ page.content | strip_html | jsonify | replace: '\n', ' '}}
  },{% endfor %}
{% for page in site.searchable %}  {
    "url": {{ page.url | prepend: site.baseurl | prepend: site.url | jsonify}},
    "title": {{page.title | jsonify}},
